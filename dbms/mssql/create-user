USE [master]
GO

CREATE LOGIN [BootCamp] 
	WITH PASSWORD=N'B9037!m8947#', 
	DEFAULT_DATABASE=[BootCamp], 
	DEFAULT_LANGUAGE=[Korean], 
	CHECK_EXPIRATION=OFF, 
	CHECK_POLICY=OFF
GO

USE [BootCamp]
GO
CREATE USER [BootCamp] FOR LOGIN [BootCamp]
GO

ALTER USER [BootCamp] WITH DEFAULT_SCHEMA=[dbo]
GO

ALTER ROLE [db_owner] ADD MEMBER [BootCamp]
GO

